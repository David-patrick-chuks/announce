# Example .env for Announce Nigeria Backend

# LLM API Keys (at least one required)
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Message Queue (RabbitMQ, e.g. CloudAMQP)
CELERY_BROKER_URL=amqp://username:password@hostname:port/vhost

# Result Backend (MongoDB, for Celery results)
CELERY_RESULT_BACKEND=mongodb://username:password@hostname:port/database

# Redis for Celery Beat scheduling
CELERY_REDBEAT_REDIS_URL=redis://username:password@hostname:port/0

# Django Secret Key
SECRET_KEY=your_very_secure_secret_key_here

# PostgreSQL Database Configuration
DB_NAME=postgres
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Optional: Django Settings
DEBUG=False

# Allowed hosts (comma-separated, e.g. for production)
ALLOWED_HOSTS=yourdomain.com,announce.ng 